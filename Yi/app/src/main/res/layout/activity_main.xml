<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/down_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <RadioGroup
            android:id="@+id/radio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">
                <RadioButton
                    android:id="@+id/home_menu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="首页"
                    android:drawableTop="@drawable/home"
                    android:background="#ffffff"
                    android:button="@null"
                    android:gravity="center" />

                <RadioButton
                    android:id="@+id/detect_menu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="探索"
                    android:drawableTop="@drawable/detect"
                    android:background="#ffffff"
                    android:button="@null"
                    android:gravity="center"
                    />

                <RadioButton
                    android:id="@+id/member_menu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="会员"
                    android:drawableTop="@drawable/member"
                    android:background="#ffffff"
                    android:button="@null"
                    android:gravity="center"
                    />

                <RadioButton
                    android:id="@+id/discuss_menu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="讨论"
                    android:drawableTop="@drawable/discuss"
                    android:background="#ffffff"
                    android:button="@null"
                    android:gravity="center"
                    />
                <RadioButton
                    android:id="@+id/me_menu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="我的"
                    android:drawableTop="@drawable/me"
                    android:background="#ffffff"
                    android:button="@null"
                    android:gravity="center"
                    />
        </RadioGroup>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/down_menu"
        android:orientation="horizontal">
    </FrameLayout>


</RelativeLayout>